@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a href="/Category/Create" class="btn btn-success">Add New</a>
<br />
<table class="table table-hover" width="100%">
    <tr>
        <th>Name</th>
        <th>Describtion</th>
        <th>Date Created</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a href="/Category/Update/@item.Id" class="btn btn-success">Update</a>
                <a href="/Category/Delete/@item.Id" class="btn btn-danger">Delete</a>

            </td>
        </tr>
    }
</table>
