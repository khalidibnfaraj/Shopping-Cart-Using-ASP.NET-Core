@model IEnumerable
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Create Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<!--<partial name="_ToasterPartial"></partial>-->

<form method="post">
    <div class="mb-3">
    <lable asp-for="Name"></lable>
    <input asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <lable asp-for="Description"></lable>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-info">Back to list</a>
    </div>


</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}