@model List<Category>
@{
    ViewBag.PageTitle = "Categories Page";
    ViewBag.CardTitle = "Categories List";
}

<div>
<a href="/Admin/Category/Create" class="btn btn-success">Add New</a>
</div>

<br/>
<table class="table table-hover" width="100%">
    <tr>
        <th>Name</th>
        <th>Describtion</th>
        <th>Date Created</th>
        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a href="/Admin/Category/Update/@item.Id" class="btn btn-info">Update</a>
                <a href="/Admin/Category/Delete/@item.Id" class="btn btn-danger">Delete</a>

            </td>
        </tr>
    }
</table>