@model Category
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Delete Category";
}
<!--<partial name="_ToasterPartial"/>-->

<div class="row">
    <div class="col-md-5">
        <form asp-action="DeleteCategory" method="post">
    <input hidden asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-info">Back to list</a>
    </div>
</form>

    </div>
</div>

