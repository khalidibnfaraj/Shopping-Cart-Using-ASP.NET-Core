@model ProductVM
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Update Product";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<!--<partial name="_ToasterPartial"></partial>-->
<div class="row">
    <div class="col-md-4">
<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input hidden asp-for="Product.Id" />
    <input hidden asp-for="Product.Image" />
    <div class="form-group">
        <label asp-for="Product.Name" class="control-label"></label>
        <input asp-for="Product.Name" class="form-control"/>
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Description" class="control-label"></label>
        <input asp-for="Product.Description" class="form-control" />
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price" class="control-label"></label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Image" class="control-label"></label>
        <input type="file" name="Imgfile" id="Imgfile" asp-for="Product.Image" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.CategoryId" class="control-label"></label>
        <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.CategoryList">
            <option disabled selected>-- Select Category --</option>
        </select>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-info">Back to list</a>
    </div>
</form>
</div>
<div class="col-md-4">
    <div class="container">
            <img src="~/@Model.Product.Image" alt="Product Image" width="450px" height="450px"/>
        </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}